<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/piloting_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MiniDroneActivity">

    <com.parrot.sdksample.view.H264VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/emergencyBt"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:width="150dp"
        android:text="Emergency" />

    <Button
        android:id="@+id/puppy"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="184dp"
        android:width="150dp"
        android:text="puppy" />

    <Button
        android:id="@+id/hit90s"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_marginBottom="126dp"
        android:width="150dp"
        android:text="hit90s" />

    <Button
        android:id="@+id/gamble"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hit90s"
        android:layout_marginTop="-126dp"
        android:width="150dp"
        android:text="gamble" />

    <Button
        android:id="@+id/takeOffOrLandBtBt"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:width="150dp" />


    <Button
        android:id="@+id/Aglieinc"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="213dp"
        android:width="150dp"
        android:text="Aglie inc." />

    <Button
        android:id="@+id/Bowtie"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hit90s"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-126dp"
        android:width="150dp"
        android:text="Bowtie." />

    <Button
        android:id="@+id/Spiral"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Aglieinc"
        android:layout_marginBottom="-213dp"
        android:width="150dp"
        android:text="Spiral" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Battery: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ff0000" />

    <TextView
        android:id="@+id/batteryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:text="XXX%"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ff0000" />

</RelativeLayout>
